	<function name="fn_ValidatePage_FirstImpression1">
		<description> fn_ValidatePage_FirstImpression1 - Function to validate the 'First Impression (Page 1)' page </description>
		<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
			<parameter type="STATIC" value="Function's XML file name: fn_FirstImpression.xml" />
		</step>
		
		<step type="WAIT_FOR" name="lbl_FirstImpression1_Header" page="pge_FirstImpression">
			<parameter type="STATIC" value="30" />
			<token type="CONTENT" name="token_lbl_FirstImpression1_Header" value="TFirstImpression1" />
			
			<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
				<parameter type="STATIC" value="User successfully landed on 'FirstImpression - Page 1' page and Header text is also as expected" />
			</step>
			
			<step type="ELSE" name="elseCondition" page="pge_FirstImpression">
				<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
					<parameter type="STATIC" value="'FirstImpression - Page 1' page is not opened or Header text is not as expected" />
				</step>
			</step>
		</step>
		
		<step type="EXISTS" name="lbl_FirstImpression1_Info" page="pge_FirstImpression">
			<token type="CONTENT" name="token_lbl_FirstImpression1_Info" value="TFirstImpression2" />
			
			<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
				<parameter type="CONTENT" value="TFirstImpression2" />
				<parameter type="STATIC" value="Above page information is displayed as expected in 'First Impression - Page 1'" />
			</step>
			
			<step type="ELSE" name="elseCondition" page="pge_FirstImpression">
				<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
					<parameter type="CONTENT" value="TFirstImpression2" />
					<parameter type="STATIC" value="Above page information is not displayed on 'First Impression - Page 1'" />
				</step>
			</step>
		</step>
		
		<step type="EXISTS" name="lnk_FirstImpression_Skip" page="pge_FirstImpression">
			<token type="CONTENT" name="token_lnk_FirstImpression_Skip" value="TFirstImpression3" />
			
			<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
				<parameter type="STATIC" value="'SKIP' link is available on 'First Impression - Page 1' page as expected" />
			</step>
			
			<step type="ELSE" name="elseCondition" page="pge_FirstImpression">
				<step type="REPORT" name="ADD_TO_REPORT" page="pge_FirstImpression">
					<parameter type="STATIC" value="'SKIP' link is not displayed/available on 'First Impression - Page 1' page" />
				</step>
			</step>
		</step>
	</function>

